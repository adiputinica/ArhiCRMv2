@model ArhiCRMv2.Models.Proiect

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Proiect"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.ID)

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Nume, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Nume, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nume)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.Status, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.StatusID, new SelectList(ViewBag.ListaStatus, "Value", "Text"), "Selectati statusul", new { @class = "form-control " })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.NrContract, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.NrContract, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.NrContract)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Valoare, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Valoare, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Valoare)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Recomandare, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Recomandare, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Recomandare)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salveaza modificari" class="btn btn-dark" />
            </div>
        </div>

    </div>}
        
